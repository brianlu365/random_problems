.row
  .col-md-6.col-md-offset-3
    %p Credit line is $5000.00
    .panel.panel-primary
      .panel-heading Add new transaction
      .panel-body
        = simple_form_for @transaction do |f|
          = f.input :transaction_type, collection: ['withdraw', 'payment'], selected: 'withdraw'
          = f.input :day_number, input_html: { min: 1 }
          = f.input :change_amount, label: 'Amount', input_html: { min: 0.01 }
          = f.button :submit, "Submit"

= render 'history'


